{
  "name": "miniradio",
  "version": "0.1.0",
  "description": "Mini Radio is Chrome Extensions for listen radio stations from Montreal and Quebec City.",
  "repository": "https://github.com/davland7/miniradio.git",
  "author": "David Landry <davland7@gmail.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "dist": "npm run build && npm-build-zip --name=miniradio-$(node -p \"require('./extension/manifest.json').version\") --name_only=true --source=./extension --destination=./",
    "test": "node --trace-warnings tests/stations.mjs",
    "watch": "vite build --watch"
  },
  "dependencies": {
    "@davland7/rplayer": "^2.2.4",
    "chalk": "^5.4.1",
    "node-fetch": "^3.3.2",
    "npm-build-zip": "^1.0.4",
    "sass": "^1.83.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.1",
    "vite": "^6.0.7"
  }
}
