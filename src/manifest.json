{
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "version": "1.0.1",
  "default_locale": "fr",
  "description": "__MSG_appDesc__",
  "author": "David Landry",
  "homepage_url": "https://github.com/davland7/mini-radio#mini-radio",
  "icons": {
    "48": "images/icon48.png",
    "96": "images/icon96.png",
    "128": "images/icon128.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["vendor/hls.min.js", "js/background.js"]
  },
  "browser_action": {
    "default_icon": "images/icon48.png",
    "default_popup": "popup.html",
    "default_title": "__MSG_appName__"
  },
  "commands": {
    "play-stop": {
      "suggested_key": {
        "default": "Ctrl+Shift+0"
      },
      "description": "__MSG_appKeyboardShortcuts__"
    }
  },
  "permissions": [
    "storage"
  ]
}
